{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This template deploys a VPC with a public and private subnet, an Internet Gateway, a public route table, a security group, and an S3 VPC Endpoint.",

    "Resources": {
        "VPCParis": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "EnableDnsSupport": "true",
                "EnableDnsHostnames": "true",
                "CidrBlock": {
                    "Ref": "VpcCidr"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "CestLeWeekend"
                    }
                ]
            }
        },
        "PublicSubnet": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "VPCParis"
                },
                "CidrBlock": {
                    "Ref": "PublicSubnetCidr"
                },
                "AvailabilityZone": {
                    "Ref": "PublicAvailabilityZone"
                },
                "MapPublicIpOnLaunch": true
            }
        },
        "PrivateSubnet": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "VPCParis"
                },
                "CidrBlock": {
                    "Ref": "PrivateSubnetCidr"
                },
                "AvailabilityZone": {
                    "Ref": "PrivateAvailabilityZone"
                },
                "MapPublicIpOnLaunch": false
            }
        },
        "InternetGateway": {
            "Type": "AWS::EC2::InternetGateway",
            "Properties": {}
        },
        "EC2VPCG2WNKR": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "Properties": {
                "InternetGatewayId": {
                    "Ref": "InternetGateway"
                },
                "VpcId": {
                    "Ref": "VPCParis"
                }
            }
        },
        "PublicRouteTable": {
            "Type": "AWS::EC2::RouteTable",
            "Properties": {
                "VpcId": {
                    "Ref": "VPCParis"
                }
            }
        },
        "PublicRoute": {
            "Type": "AWS::EC2::Route",
            "Properties": {
                "RouteTableId": {
                    "Ref": "PublicRouteTable"
                },
                "DestinationCidrBlock": "0.0.0.0/0",
                "GatewayId": {
                    "Ref": "InternetGateway"
                }
            },
            "DependsOn": [
                "InternetGateway"
            ]
        },
        "WebServerSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Allow HTTP/HTTPS and SSH inbound traffic",
                "VpcId": {
                    "Ref": "VPCParis"
                },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 80,
                        "ToPort": 80,
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 443,
                        "ToPort": 443,
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 22,
                        "ToPort": 22,
                        "CidrIp": "0.0.0.0/0"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "WebServerSecurityGroup"
                    }
                ]
            }
        },
        "S3VPCEndpoint": {
            "Type": "AWS::EC2::VPCEndpoint",
            "Properties": {
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": "*",
                            "Action": "s3:*",
                            "Resource": "arn:aws:s3:::*"
                        }
                    ]
                },
                "RouteTableIds": [
                    {
                        "Ref": "PublicRouteTable"
                    }
                ],
                "ServiceName": {
                    "Fn::Join": [
                        "",
                        [
                            "com.amazonaws.",
                            {
                                "Ref": "AWS::Region"
                            },
                            ".s3"
                        ]
                    ]
                },
                "VpcId": {
                    "Ref": "VPCParis"
                }
            }
        },
        "PublicSubnetRouteTableAssociation": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "PublicSubnet"
                },
                "RouteTableId": {
                    "Ref": "PublicRouteTable"
                }
            }
        }
    },
    "Parameters": {
        "VpcCidr": {
            "Description": "CIDR block for the VPC",
            "Type": "String",
            "Default": "10.0.0.0/16"
        },
        "PublicSubnetCidr": {
            "Description": "CIDR block for the public subnet",
            "Type": "String",
            "Default": "10.0.0.0/24"
        },
        "PrivateSubnetCidr": {
            "Description": "CIDR block for the private subnet",
            "Type": "String",
            "Default": "10.0.1.0/24"
        },
        "PublicAvailabilityZone": {
            "Description": "Network AZ",
            "Type": "String",
            "Default": "eu-west-3a",
            "AllowedValues": [
                "eu-west-3a",
                "eu-west-3b",
                "eu-west-3c"
            ]
        },
        "PrivateAvailabilityZone": {
            "Description": "Network AZ",
            "Type": "String",
            "Default": "eu-west-3b",
            "AllowedValues": [
                "eu-west-3a",
                "eu-west-3b",
                "eu-west-3c"
            ]
        }
    }
}